@{
    ViewBag.Title = "Inicio";
}
<h1 class="page-header">@ViewBag.Title</h1>

@Html.Partial("Partials/_Menu", Enums.PanelMenu.Home)

<h2 class="page-header">Income</h2>

<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                Income Total
                <span class="badge pull-right">
                    <i class="fa fa-line-chart"></i>
                </span>
            </div>
            <widgetincome :month="false"></widgetincome>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                Income of the month
                <span class="badge pull-right">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
            <widgetincome :month="true"></widgetincome>
        </div>
    </div>
</div>

<h2 class="page-header">Statistics</h2>

<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                Percentage change (Current month)
                <span class="badge pull-right">
                    <i class="fa fa-line-chart"></i>
                </span>
            </div>
            <widgetvariance></widgetvariance>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                Arithmetic mean (per month)
                <span class="badge pull-right">
                    <i class="fa fa-bar-chart"></i>
                </span>
            </div>
            <widgetaverage></widgetaverage>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Assets/vue_components/dist/widget.components.js"></script>
}